# ============================================
# Songmetrix Backup Service - Environment Variables
# Arquivo de exemplo para configuração
# ============================================

# Ambiente
NODE_ENV=production
TZ=America/Sao_Paulo

# ============================================
# PostgreSQL - Banco de Produção
# ============================================
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password

# ============================================
# Supabase - Backup Opcional
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ============================================
# MinIO - Storage de Backup
# ============================================
MINIO_ENDPOINT=your_minio_endpoint
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=your_backup_bucket

# ============================================
# Configurações de Backup
# ============================================
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12
BACKUP_COMPRESSION_LEVEL=9

# ============================================
# Monitoramento e Alertas
# ============================================
MONITORING_ENABLED=true
ALERT_EMAIL=your_admin_email@example.com
ALERT_WEBHOOK=https://your-webhook-url.com/backup-alert

# ============================================
# Configurações Avançadas (Opcional)
# ============================================
# Diretórios customizados (se necessário)
BACKUP_LOG_DIR=/app/logs
BACKUP_TEMP_DIR=/app/temp
BACKUP_CONFIG_DIR=/app/config

# Configurações de rede
BACKUP_NETWORK_TIMEOUT=30000
BACKUP_CONNECTION_POOL_SIZE=5

# Configurações de segurança
BACKUP_ENCRYPTION_ENABLED=false
BACKUP_ENCRYPTION_KEY=your_encryption_key_here